#!/usr/bin/env shgit_remove () {    grep -q token "$HOME/.gitconfig" &>/dev/null 2>&1    if [[ $? -ne 0 ]]; then        curl -u $(git config user.name) --location --request DELETE "https://api.github.com/repos/$(git config user.name)/$1" | [ -z grep -q "Not Found" ] &>/dev/null        echo "Remove the procject."        echo "$(tput setaf 2)DONE"    else        curl -X DELETE -H "Authorization: token $(git config user.token)" "https://api.github.com/repos/$(git config user.name)/$1" | [ -z grep -q "Not Found" ] &>/dev/null        echo "Remove the procject."        echo "$(tput setaf 2)DONE"    fi    rm -rf "$1" | echo "Remove the procject folder: $1"}