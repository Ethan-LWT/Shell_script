git_remove () {    cd ~/Downloads/github/    curl -u $(git config user.name) --location --request DELETE "https://api.github.com/repos/$(git config user.name)/$1" | echo "Remove the procject folder."    rm -rf "$1"}git_create () {    git ls-remote "https://github.com/$(git config user.name)/$1" &>/dev/null    if [[ $? -eq 0 ]]; then        cowsay -f tux "Ooops!!                       The repository has already existed.                       EXIT!" || echo "Ooops!! The repository has already existed. EXIT!"    else        if [ "$2" = "-p" ] ; then            echo "Create the private "$1" repository in My github"            curl -u "$(git config user.name)" https://api.github.com/user/repos -d "{\"name\":\"$1\", \"private\":true}" | grep -q "Bad credentials"        else            echo "Create the "$1" repository in My github"            curl -u "$(git config user.name)" https://api.github.com/user/repos -d "{\"name\":\"$1\"}" | grep -q "Bad credentials"        fi        if [[ $? -eq 0 ]]; then            cowsay -f tux "Ooops!!, Wrong Password ~" || echo "Ooops!!, Wrong Password ~"            break &>/dev/null        else            cd ~/Downloads/github/            mkdir "$1" && echo "Create the "$1" procject folder."            cd "$1" && echo "# "$1"" >> README.md            git init && git add README.md &>/dev/null 2>&1            git commit -m "create project" &>/dev/null 2>&1            git remote add origin https://github.com/$(git config user.name)/"$1".git &>/dev/null 2>&1            git push -u origin master &>/dev/null 2>&1            echo "DONE"        fi    fi}